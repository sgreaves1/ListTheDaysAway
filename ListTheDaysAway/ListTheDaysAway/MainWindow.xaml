<Window x:Class="ListTheDaysAway.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="104.525" Width="525"
        WindowStyle="None"
        Background="Black" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Orientation="Horizontal" >
            <Label Content="{Binding Path=SelectedEvent.DaysLeft}" Foreground="White" FontSize="40" VerticalAlignment="Center"/>
            <Label Content="days till:" Foreground="White" FontSize="18" VerticalAlignment="Center"/>
            <Label Content="{Binding Path=SelectedEvent.Name}" Foreground="White" VerticalAlignment="Center" FontSize="40"/>
        </StackPanel>
    </Grid>
</Window>
